<h1>Listing battles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Hashtag One</th>
      <th colspan="2">Hashtag Two</th>
      <th>Active?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.name %></td>
        <% battle.hashtags.each do |h| %>
          <td><%= h.name %></td>
          <td><%= battle.hashtag_count(h) %></td>
        <% end %>
        <td><%= battle.active? %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
        <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

